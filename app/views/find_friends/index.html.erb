<div class="tw-form row">
  <div class="col-lg-6 col-lg-offset-3">
    <div id="find_friends" class="well">
      <h4><b>Find Friends</b>
      	
      	<%= form_tag('', method: :get) do %>
      		<input type="text" name="name_filter" class="form-control" placeholder="Filter by Name"
      			   value="<%= params[:name_filter] %>"/>
      		<button class="btn btn-primary btn-filter">Filter</button>
      	<% end %>
      </h4>
      <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
          <%= render(@users) || "Couldn't Find Friends at the current moment" %>
        </div>
      </div>
    </div>
    <div id="load-more">
      <%= render 'partials/load_more', items: @users %>
    </div>
  </div>
</div>
