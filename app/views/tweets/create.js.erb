<% if @tweet.save %>
  $("#tweet_tweet_text").val("");
  $("#tag_text").val("");
  $("#feed").prepend("<%=j render @tweet %>");
 	$('#tweet-error').html("<%=j render 'partials/error_message', error_message: 'Tweet posted successfully to your timeline' %>");
  $('#tweet-count').text('140');
 	$("#new-tweet-modal").modal('hide');
 	$('#tweets-count').html("<%= current_user.reload.tweets_count %>");
 	$('#tweet_tag_statistic').html("<%= render 'partials/tag_list' %>");
<% else %>
	$('#tweet-error').html("<%=j render 'partials/error_message', error_message: @tweet.errors.full_messages.first %>");
<% end %>